# Public Company RAG Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# REQUIRED: API Keys
# =============================================================================

# Turbopuffer API Key (get from: https://turbopuffer.com)
# Required for vector storage (2.85M vectors for this dataset)
TURBOPUFFER_API_KEY=your_turbopuffer_api_key_here

# OpenAI API Key (get from: https://platform.openai.com/api-keys)
# Used for embeddings (text-embedding-3-small) and answer generation (gpt-4o)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# OPTIONAL: Turbopuffer Configuration (defaults provided)
# =============================================================================

# Turbopuffer region (default: "api" which resolves to api.turbopuffer.com)
TURBOPUFFER_REGION=api

# Turbopuffer namespace for storing chunks (default: public_company_10k_chunks)
# Change this if you want to use a different namespace
TURBOPUFFER_NAMESPACE=public_company_10k_chunks

# =============================================================================
# OPTIONAL: Query Configuration (defaults provided)
# =============================================================================

# Default number of chunks to retrieve per query (default: 10)
DEFAULT_TOP_K=10

# OpenAI embedding model (default: text-embedding-3-small)
# Options: text-embedding-3-small, text-embedding-3-large
EMBEDDING_MODEL=text-embedding-3-small

# Embedding dimensions (must match model: 1536 for small, 3072 for large)
EMBEDDING_DIMENSION=1536

# LLM model for answer generation (default: gpt-4o)
# Options: gpt-4o, gpt-4o-mini, gpt-4-turbo
LLM_MODEL=gpt-4o
